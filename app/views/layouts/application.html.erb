		}
		function showWhat(){
			$("#what").dialog({ title: 'Here it is ...' });
			$("#what").dialog("open");
			return false;
		}
		function showHelp(){
			$("#help").dialog({ title: 'FAQ' });
			$("#help").dialog("open");
