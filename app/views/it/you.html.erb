<% @it = @it%>
<%= current_user.username %>: <%= link_to('Change Password', edit_user_registration_path, :class => "smalllink") %>
<hr style="border: 1px dashed #000;" />
<h3>Your sh!z score: <%= @shiz_score.to_s %></h3>
<div>
<span>Your Categories:</span>
<ul>
<% @categories.each do |category|%>
<li>
	<%= link_to category.theshiz, it_category_url(category.it, category) %> - Post (<%= category.contents.count.to_s %>)
</li>
<%end%>
</ul>
</div>
<div>
	<span>Posts you added:</span>
	<ul>
	<% @contents.each do |content|%>
<li>
	<% if content.class.name == "Question"%>
	<%= link_to truncate(content.theshiz, :length => 50, :ommission => "..."), it_category_content_url(content.category.it, content.category, content) %> - Comments(<%= content.comments.count %>)
	<%else%>
	<%= link_to content.title, it_category_content_url(content.category.it, content.category, content) %> - Comments(<%= content.comments.count %>)
	<%end%>
</li>
<%end%>
</div>
<div>
	<span>Posts you commented on (Total comments: <%= @comments.count %>):</span>
	<ul>
	<%  @commented_contents.sort_by{|c| c.comments.count}.reverse.each do |content|%>
<li>
	<% if content.class.name == "Question"%>
	<%= link_to truncate(content.theshiz, :length => 50, :ommission => "..."), it_category_content_url(content.category.it, content.category, content) %> - Comments(<%= content.comments.count %>)
	<%else%>
	<%= link_to content.title, it_category_content_url(content.category.it, content.category, content) %> - Comments(<%= content.comments.count %>)
	<%end%>
</li>
<%end%>
</ul>
</div>
