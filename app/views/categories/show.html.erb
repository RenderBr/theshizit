<script>
function expand_all()
{
	alert('hide');
	$('div.s').toggle(
		
		function () {
               $('div.s').show();
         },
         function () {
                $('div.s').hide();
         }	
	);
	
	return false;
}

$(document).ready(function() {
		 $('a.toggle').toggle(
			function () {
			   if($(this).text() == "-")
			   {
			   		$(this).text("+");
			   }
			   else
			   {
			   	  $(this).text("-");
			   }
               
               $(this).parent('div').next('div').toggle();
            },
            function () {
               if($(this).text() == "-")
			   {
			   		$(this).text("+");
			   }
			   else
			   {
			   	  $(this).text("-");
			   }
                $(this).parent('div').next('div').toggle();
            }
		 );
		 
		 $('a[name="expand"]').toggle(
		 	function () {
               $('div.s').show();
               $(this).text("-");
               $('.toggle').text("-");
            },
            function () {
               $('div.s').hide();
               $(this).text("+");
               $('.toggle').text("+");
            }	 	
		 );
});

</script>
