<script>
function showAddDialog(){
	$("#divId").dialog({ title: '<%=t :add_category_title %>' });
   	$("#divId").dialog("open");
   	$("#modalIframeId").attr("src","<%= new_it_category_url(@it) %>");
   	return false;
}

$(document).ready(function() {
		$("#divId").dialog({
			autoOpen : false,
			modal : true,
			height : 400,
			width : 500,
			position: [100,50],
			close : function(event, ui) {
				location.reload(true);
			}
		});
});
</script>
<span style="font-family: Anime;color: black;font-size: 18px;text-decoration: underline;text-shadow: none;font-weight: bold;"><%= @it.name %></span>
<span style="float:right;">:)<%= link_to t(:archive_link) , its_path %>(:</span>
<br />
<span><%= @it.description %></span>
<br />
<% if !@it.locked %>
<input type="button" id="add" value="<%=t :add_category_button %>" onclick="return showAddDialog()">
<% end %>
<div id="category" style="width:70%;text-align: center;margin:0 auto;">
<%= render :partial => "categories/list", :locals=>{:categories=> @categories, :notifications => @notifications} %> 
</div>
<br />
