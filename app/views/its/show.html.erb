<script>
function showAddDialog(){
	$("#divId").dialog({ title: '<%=t :add_category_title %>' });
   	$("#divId").dialog("open");
   	$("#modalIframeId").attr("src","<%= new_it_category_url(@it) %>");
   	return false;
}

$(document).ready(function() {
		$("#divId").dialog({
			autoOpen : false,
			modal : true,
			height : 400,
			width : 500,
			position: [100,50],
			close : function(event, ui) {
				location.reload(true);
			}
		});
});
</script>
<% if !@it.locked %>
<div style="width:70%;text-align: center;margin:0 auto;"><a href="" onclick="return showAddDialog();" class="smalllink"><%=t :add_category_button %><a/></div>
<% end %>
<div id="category" style="width:70%;text-align: center;margin:0 auto;border: dotted 1px black;padding: 10px;">
<%= render :partial => "categories/list", :locals=>{:categories=> @categories, :notifications => @notifications} %> 
</div>
<div id="divId" title="Modal Window">
    <iframe id="modalIframeId" width="100%" height="100%"
    marginWidth="0" marginHeight="0" frameBorder="0" scrolling="no"
    title="Dialog Title">Your browser does not support javascript</iframe>
</div>
